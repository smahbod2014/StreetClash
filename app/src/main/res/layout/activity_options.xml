<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transmitting"
        android:textOn="On"
        android:textOff="Off"
        android:id="@+id/transmit_switch"
        android:checked="false"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="false"
        android:layout_marginTop="327dp">

        <ImageButton
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_pass_feed"
            android:layout_weight="0.26"
            android:layout_marginLeft="-4dp"
            android:src="@mipmap/feed"
            android:scaleType="fitCenter"
            android:onClick="passFeedButtonClicked"/>

        <ImageButton
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton"
            android:layout_weight="0.26"
            android:layout_marginLeft="-6dp"
            android:src="@mipmap/profile"
            android:scaleType="fitCenter"
            android:adjustViewBounds="false"
            android:onClick="profileButtonClicked"/>

        <ImageButton
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton8"
            android:layout_marginLeft="-6dp"
            android:src="@mipmap/wrench"
            android:scaleType="fitCenter"/>

    </LinearLayout>

</LinearLayout>


